<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Invoice - <%= businessName %></title>
    <style>
        body {
            max-width: 18cm; /* Safe printable width for A4 */
            margin: 0 auto;
            font-family: Arial, sans-serif;
            font-size: 9pt;
            color: #000;
            box-sizing: border-box;
        }

        *, *:before, *:after {
            box-sizing: inherit;
        }

        /* --- Header --- */
        .header {
            border-bottom: 1px solid #000;
            padding-bottom: 8px;
            margin-bottom: 10px;
            text-align: center;
        }

        .header h2 {
            margin: 0;
            font-size: 13pt;
        }

        /* --- Sections --- */
        .section {
            border: 1px solid #000;
            padding: 6px;
            margin-bottom: 8px;
            word-wrap: break-word;
        }

        .flex {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        /* --- Items Table --- */
        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            table-layout: fixed;
            word-break: break-word;
        }

        .items-table th,
        .items-table td {
            border: 1px solid #000;
            padding: 4px;
            font-size: 9pt;
            white-space: normal;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        .items-table th {
            font-weight: bold;
            text-align: center;
        }

        .right {
            text-align: right;
        }

        .bold {
            font-weight: bold;
        }

        /* --- Totals --- */
        .totals {
            width: 100%;
            border: 1px solid #000;
            border-collapse: collapse;
            margin-top: 10px;
        }

        .totals td {
            padding: 5px;
            border: 1px solid #000;
        }

        /* --- Footer --- */
        .footer {
            margin-top: 15px;
            display: flex;
            justify-content: space-between;
            border: 1px solid #000;
            padding: 8px;
            flex-wrap: wrap;
        }

        .bank-details {
            font-size: 8.5pt;
            width: 65%;
            word-break: break-word;
        }

        .qr {
            text-align: center;
            width: 30%;
        }

        .qr img {
            width: 90px;
            height: 90px;
            border: 1px solid #000;
        }

        /* --- Notice --- */
        .notice {
            margin-top: 10px;
            font-size: 8pt;
            text-align: center;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <div class="header">
        <h2><%= businessName %></h2>
        <div><%= businessAdd %></div>
        <div>Mobile: <%= businessMobileNo %> | Email: <%= businessEmail %></div>
        <div><b>Tax Invoice</b></div>
    </div>

    <!-- Bill To + Invoice Info -->
    <div class="section flex">
        <div>
            <b>Bill To:</b><br>
            <%= name %><br>
            <%= billingAddress %><br>
            Mobile: <%= mobNo %>
        </div>
        <div>
            Invoice No: <%= saleCount %><br>
            Date: <%= date %>
        </div>
    </div>

    <!-- Items -->
    <table class="items-table">
        <thead>
            <tr>
                <th style="width:38%">Description</th>
                <th style="width:10%">Qty</th>
                <th style="width:15%">Rate</th>
                <th style="width:15%">Discount</th>
                <th style="width:22%">Amount</th>
            </tr>
        </thead>
        <tbody>
            <% list.forEach(item=> { %>
                <tr>
                    <td>
                        <%= item.name %><br>
                        <small>IMEI: <%= item.imeiNo %></small>
                    </td>
                    <td><%= item.qt %></td>
                    <td class="right">₹<%= item.sp %></td>
                    <td class="right"><%= item.da %> (<%= item.dp %>%)</td>
                    <td class="right">₹<%= item.amount %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Totals -->
    <table class="totals">
        <tr>
            <td>Total Discount</td>
            <td class="right">₹<%= Discount.amount %> (<%= Discount.per %>%)</td>
        </tr>
        <tr>
            <td>Service Charge</td>
            <td class="right">₹<%= ServiceCharge %></td>
        </tr>
        <tr class="bold">
            <td>Grand Total</td>
            <td class="right">₹<%= Total %></td>
        </tr>
    </table>

    <!-- Footer -->
    <div class="footer">
        <div class="bank-details">
            <b>Bank Details:</b><br>
            Bank: <%= BN %><br>
            A/c No: <%= BAN %><br>
            IFSC: <%= BIFSC %><br>
            A/c Holder: <%= BAHN %>
        </div>
        <div class="qr">
            <img src="<%= qrImg %>" alt="QR Code"><br>
            <small>Scan to Pay</small>
        </div>
    </div>

    <div class="notice">
        This is a computer-generated invoice. No signature required.
    </div>
</body>

</html>
